<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ForgotPasswordActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/back"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_back" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tìm tài khoản"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nhập tên người dùng, email hoặc số di động của bạn."
        android:layout_marginHorizontal="15dp"
        android:textSize="16sp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bạn không thể đặt lại mật khẩu?"
        android:textColor="#1767BE"
        android:layout_marginHorizontal="15dp"
        android:textSize="16sp"
        android:layout_marginTop="5dp"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tên người dùng, email/số di động"
        android:textSize="16sp"
        android:background="@drawable/bg_account"
        android:layout_marginTop="30dp"
        android:paddingStart="15dp"
        android:layout_marginHorizontal="15dp"
        android:paddingVertical="20dp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tìm tài khoản"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_login"
        android:padding="10dp"
        android:layout_marginHorizontal="15dp"
        android:gravity="center"/>


</LinearLayout>